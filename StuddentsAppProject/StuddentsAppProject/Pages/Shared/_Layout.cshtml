<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StuddentsAppProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StuddentsAppProject.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">StuddentsAppProject</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/swagger/index.html">Swagger</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <div class="row">

            <div class="left-menu col-3">
                <div class="p-5">
                    <h3>Left menu</h3>

                    <ul class="list-group">
                        <li class="list-group-item">
                            Students
                            <ul class="list-group mt-2">
                                <li class="list-group-item">
                                    <a asp-controller="Students" asp-action="Create" class="text-decoration-none">Add student</a>
                                    @* <a href="@Url.Action("Create", "Students")" class="text-decoration-none">Add student</a> *@
                                </li>
                                <li class="list-group-item">
                                    <a asp-controller="Students" asp-action="Index" class="text-decoration-none">List of students</a>
                                    @* <a href="@Url.Action("Index", "Students")" class="text-decoration-none">List of students</a> *@
                                </li>
                            </ul>                                                                                    
                        </li>
                        <li class="list-group-item">
                            Subjects
                            <ul class="list-group mt-2">
                                <li class="list-group-item">
                                    <a asp-controller="Subjects" asp-action="Create" class="text-decoration-none">Add subject</a>
                                </li>
                                <li class="list-group-item">
                                    <a asp-controller="Subjects" asp-action="Index" class="text-decoration-none">List of subjects</a>
                                </li>
                            </ul>
                        </li>
                        <li class="list-group-item">
                            Exams
                            <ul class="list-group mt-2">
                                <li class="list-group-item">
                                    <a asp-controller="Exam" asp-action="Create" class="text-decoration-none">Add exam</a>
                                </li>
                                <li class="list-group-item">
                                    <a asp-controller="Exam" asp-action="Index" class="text-decoration-none">List of exams</a>
                                </li>
                            </ul>
                        </li>                        
                    </ul>
                </div>
            </div>

            <main role="main" class="pb-3 col-9">
                @RenderBody()
            </main>

        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - StuddentsAppProject - <a asp-area="" asp-page="/Privacy">Privacy</a> | Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/axios/dist/axios.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>